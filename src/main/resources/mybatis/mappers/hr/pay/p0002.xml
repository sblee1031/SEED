		<resultMap id="SALARY_calculResult02" type="SALARY_calculVO">
			  <result property="pk_SALARY_CALCUL_TOTAL_CODE" column="pk_SALARY_CALCUL_TOTAL_CODE"/>
		      <result property="fk_TA_SAWON_CODE" column="fk_TA_SAWON_CODE"/>
