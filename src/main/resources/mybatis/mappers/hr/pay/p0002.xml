			  <result property="salary_CAL_PAYMENTDAY" column="salary_CAL_PAYMENTDAY"/>
	          <result property="d_B_PAYMENT_DT" column="d_B_PAYMENT_DT"/>
	          <result property="salary_CAL_SALARY_ITEM" column="salary_CAL_SALARY_ITEM"/>
	          
	          
